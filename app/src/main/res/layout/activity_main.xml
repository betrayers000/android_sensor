<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customDarkGray"
    tools:context=".MainActivity"
    android:id="@+id/main_background">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Target"
        android:autoSizeTextType="uniform"
        android:textSize="40dp"
        android:textColor="#fafafa"
        android:gravity="center"
        android:textStyle="bold"/>

<!--    <Button-->
<!--        android:id="@+id/connecting_btn"-->
<!--        android:text="연결페이지"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintVertical_bias="0.05"/>-->
    <ImageButton

        android:id="@+id/main_measure_btn"
        android:text="측정하기"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.35"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.9"/>
    <ImageButton

        android:id="@+id/main_sound_off_btn"
        android:text="알림끄기"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.35"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.9"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connect_layout"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.1"
        android:background="@drawable/rectangled_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.55">

        <TextView
            android:text="@string/readyText"
            android:textColor="#fafafa"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/result_viewer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:textSize="60dp"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/result_viewer_tmp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/result_viewer"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="temp"
            android:autoSizeTextType="uniform"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#fafafa"/>
        <TextView
            android:id="@+id/result_viewer_min"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintTop_toBottomOf="@+id/result_viewer_tmp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="#fafafa"/>
        <TextView
            android:id="@+id/result_viewer_max"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintTop_toBottomOf="@+id/result_viewer_min"
            app:layout_constraintLeft_toLeftOf="parent"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="#fafafa"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ready_layout"
        app:layout_constraintVertical_bias="0.1"
        android:background="@drawable/rectangled_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:weightSum="10"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.55">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"/>
        <TextView
            android:text="@string/needConnectText"
            android:textColor="#fafafa"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>