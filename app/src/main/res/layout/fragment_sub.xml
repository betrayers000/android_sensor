<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SubFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connect_layout"
        android:background="@drawable/rectangled_greenview"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/result_viewer_layout"
            android:padding="10dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.anastr.speedviewlib.SpeedView
                app:sv_withTremble="false"
                app:sv_speedTextColor="@color/white"
                app:sv_unitTextColor="@color/white"
                app:sv_speedTextSize="60sp"
                app:sv_unitTextSize="30sp"
                app:sv_textColor="@color/white"
                app:sv_textSize="15sp"
                app:sv_speedTextFormat="INTEGER"
                android:id="@+id/fragment_result_viewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_result_viewer_tmp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/result_viewer_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="temp"
            android:autoSizeTextType="uniform"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#fafafa"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>