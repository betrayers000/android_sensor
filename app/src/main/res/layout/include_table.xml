<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TableLayout
        android:layout_width= "0dp"
        android:weightSum="10"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TableRow>

            <TextView
                android:background="@color/grey"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="산소농도(%)"
                android:gravity="center" />
            <TextView
                android:background="@color/grey"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="효과 및 내용"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="60-85"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="격렬한 운동 후에 피로회복 효과(단시간)"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="50-60"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="운동능력이 최대가 되는 농도(단시간)"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="35-50"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="가벼운 운동후의 피로회복 효과(단시간)"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="21-30"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="산소농도 증가에 따른 운동능력증가(쾌적지수)"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="20.9"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="대기의 표준산소농도"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="20.5"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="건축기준법에 의한 환기량의 기준치"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="19-20"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="불완전 연소에 의한 CO급증, 답답함(아파트, 지하철)"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="18.0"
                android:textColor="@color/red"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="노동안전위생 기준 최저치(공장, 다중이용시설)"
                android:textColor="@color/red"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="15-16"
                android:textColor="@color/red"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="현기증 증상, 호흡수 증가"
                android:textColor="@color/red"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="13-15"
                android:textColor="@color/red"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="두통, 창백한 얼굴, 구토증세"
                android:textColor="@color/red"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="12.0"
                android:textColor="@color/red"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="단시간 위험"
                android:textColor="@color/red"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="7.0"
                android:textColor="@color/red"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:text="사망"
                android:textColor="@color/red"
                />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>